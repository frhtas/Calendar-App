<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="15dp"/>
            <gradient
                android:startColor="@color/colorAccent"
                android:centerColor="#025E67"
                android:endColor="#01393E"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="15dp"/>
            <gradient
                android:startColor="#4C989E"
                android:centerColor="#31878F"
                android:endColor="#06717A"
                android:type="linear"
                android:angle="270"/>
        </shape>
    </item>
</selector>